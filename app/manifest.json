{
    "manifest_version": 2,
    "name": "Senior Dev Contribution Graph Editor",
    "description": "Show off your contributions on GitHub.",
    "homepage_url": "https://github.com/emhaechi/senior-dev-contribution-graph-editor",
    "version": "1.0.1",
    "browser_specific_settings": {
        "gecko": {
            "id": "{9f62ec71-5afc-40d7-9e32-48230547ba6b}"
        }
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "48": "assets/icons/logo-ext.png",
        "96": "assets/icons/logo-ext@2x.png"
    },
    "options_ui": {
        "page": "src/options/options-ui.html"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js": [
                "src/constants/constants.js",
                "src/content-scripts/content-main.js"
            ],
            "css": [
                "src/content-scripts/content-main.css"
            ]
        }
    ]
}
